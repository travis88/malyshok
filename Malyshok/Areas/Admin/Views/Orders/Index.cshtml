@model OrderViewModel

@if (Model.UserResolution.Read)
{
    <div class="content">
        <h1>@ViewBag.Title</h1>

        @if (Model.List != null)
        {
            foreach (var item in Model.List.Orders)
            {
                <div class="list-item">
                    <div class="li-desc">
                        <a href="/admin/orders/item/@item.Id/@ViewBag.urlQuery" title="@item.Num" class="li-caption">@item.Num</a><br />
                        <span>Статус: </span>@(item.Status != null ? item.Status.Title : String.Empty)<br />
                        <span>Дата: </span>@item.Date.ToString("dd.MM.yyyy HH:mm:ss")<br />
                    </div>
                </div>
            }
            Html.RenderAction("Pager", "Templates", new { @Model = Model.List.Pager });
        }
        else
        {
            <div class="alert alert-info">Не найдено ни одной записи.</div>
        }
    </div>

    <div class="dop_info-block"></div>

    <div class="buttons"></div>
}
else
{
    <div class="content"><p>У вас недостаточно прав.</p></div>
}