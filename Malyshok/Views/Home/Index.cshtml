        <div id="shadow" class="shadow"></div>
    </div>
</div>
<div class="top-news">
    <div class="block-title">
        <div class="title">Новости</div>
    </div>
    <div class="news_list">
        @if (Model.Materials != null)
        {
            <div class="row">
                @foreach (var item in Model.Materials)
                {
                <div class="col-md-4">
                    <div class="top_news-item">
                        <a class="title" href="/press/@item.Date.Year/@item.Date.Month/@item.Date.Day/@item.Alias">@Html.Raw(item.Title)</a>
                        <div class="date"><span>@item.Date.ToString("HH:mm | dd.MM.yyyy")</span></div>
                    </div>
                </div>
                }
            </div>
        }
    </div>
</div>

