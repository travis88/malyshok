@model ProductModel[]
@{ 
    Layout = null;
}

@if (Model != null)
{
    <div class="new-prod-block">
        <div class="title"><a href="/Novelties">Новинки</a></div>
        @foreach (ProductModel item in Model)
        {
            if (item != null)
            {
                var ProdImg = item.Photo != null ? Settings.ProdContent + item.Barcode + "/" + item.Photo.Replace(".jpg", "_mini.jpg") : "";
                ProdImg = File.Exists(Server.MapPath(ProdImg)) ? ProdImg : "";

                <div class="new-prod-item">
                    <a href="/prod/@item.Id/">
                        <img src="@ProdImg" />
                        @*<div class="new-prod-img"></div>*@
                        @*<div class="new-prod-title">@item.Title.Replace(",",", ")</div>*@
                    </a>
                </div>
            }
        }
    </div>
}